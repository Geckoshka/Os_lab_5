<Window x:Class="PalindromeChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Перевірка паліндромів" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Перевірка паліндромів" FontSize="20" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Введіть слово або фразу:" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="InputTextBox" FontSize="14" Padding="10" Height="40" 
                    Text="Паліндром — і ні морд, ні лап" TextChanged="InputTextBox_TextChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="CheckButton" Content="Перевірити" Click="CheckButton_Click" 
                       Padding="20,10" Margin="0,0,10,0" Background="LightBlue" FontWeight="Bold"/>
                <Button Content="Очистити" Click="ClearButton_Click" Padding="20,10" Background="LightGray"/>
            </StackPanel>

            <Border x:Name="ResultBorder" BorderThickness="1" BorderBrush="Gray" 
                   CornerRadius="5" Padding="15" Margin="0,20" Background="LightYellow">
                <TextBlock x:Name="ResultText" FontSize="16" TextWrapping="Wrap" Text="Тут буде результат..."/>
            </Border>
        </StackPanel>
    </Grid>
</Window>